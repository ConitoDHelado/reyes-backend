datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  gifts    gift[]
}

model gift {
  id      Int     @id @default(autoincrement())
  name    String
  price   Float?
  desc    String?
  url     String 
  bought  Boolean @default(false)
  userId  Int
  user    user    @relation(fields: [userId], references: [id])
}